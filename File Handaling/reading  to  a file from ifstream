#include <iostream> 
#include <fstream> 
using namespace std; 
int main() 
{ 
    ifstream file; 
    file.open("Aman.txt"); 
    if(!file.is_open()){ 
    cout<<"error while opening the file"; 
} 
else  
   { 
     cout<<"reading from the file content are "; 
     string line; 
     getline(file,line); 
      cout<<line<<endl; 
   } 
  return 0;
} 

 
